          </div>
        </div>
      </div>

      <!-- その他 -->
      <div class="grid-content md:w-1/2 lg:w-1/3 grid-block-6">
        <!-- イメージ -->
        <div class="grid-content-image hover:shadow-raised hover:translateY-2px transition">
          <%= image_tag "other.png", alt: "other" %>
          <!-- テキスト -->
          <div class="grid-content-text">
            <h3><%= "Other".truncate(18) %></h3>
            <p><span>
              <%= form_for(subject_path, html:{method: :get}, remote: true) do |f| %>
                <div><%= hidden_field_tag :search, "その他" %></div>
                <%= f.submit "その他のネタ投稿はこちら", class: "subject-article-btn" %>
              <% end %>
            </span></p>
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- Articleのフィード -->
  <div id="feed-list-area">
    <h1><%= @search %></h1>
    <%= render 'shared/feed' %>
  </div>


</div>

<script>
  var position = $("#feed-list-area").offset().top -100;

  $(".subject-article-btn").click(function(){

    $("html,body").animate({
        scrollTop : position
    }, {
        queue : false
    });

  });
</script>




