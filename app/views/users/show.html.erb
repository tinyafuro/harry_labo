<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <!-- 投稿フォーム -->
    <section class="article_form">
      <%= render 'shared/article_form' %>
    </section>

  </aside>

  <!-- Article情報 -->
  <div class="col-md-8">
    <% if @user.article.any? %>
      <h3>Articles (<%= @user.article.count %>)</h3>
        <ol class="articles">
          <%= render @articles %>
        </ol>
      <%= will_paginate @articles %>
    <% end %>
  </div>

</div>